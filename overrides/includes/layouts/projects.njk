---
layout: layouts/patched-base.njk
---

{{ content | safe }}


<div class="md:flex items-start flex-grow md:mt-2">
    <div class="md:flex-auto md:mr-4">
        <div class="grid gap-4 grid-cols-1">
            <ul class="space-y-8">
                <li class="text-sm leading-6">

                    {% for project in projects %}
                <li class="text-sm leading-6">
                    <figure class="relative flex flex-col-reverse bg-slate-50 rounded-lg p-4 md:p-6 dark:bg-slate-800 dark:highlight-white/5">

                        <div class="min-w-0 relative flex-auto">
                            <div class="md:flex md:flex-row">
                                <div class="items-start flex-auto">
                                    <h2 class="font-semibold pr-20 text-xl text-black dark:text-slate-300 font-medium md:mb-4">
                                        {{ project.name }}
                                    </h2>
                                </div>

                                {% if project.site_name %}
                                <div class="md:space-y-8 font-medium space-x-8 flex items-center">
                                    <a href="{{ project.site }}"
                                       class="button inline-flex md:border md:rounded-md py-2 md:px-2 md:mr-2 text-sm flex-shrink-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mx:mx-2 mx-1"
                                             fill="currentColor"
                                             viewBox="0 0 16 16">
                                            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                                        </svg>
                                        {{ project.site_name }}
                                    </a>
                                </div>
                                {% else %}

                                {% endif %}

                            </div>
                            <div class="space-y-8 font-medium mr-2">
                                <dd class="md:text-lg ">Год: {{ project.work_period }}
                                </dd>
                            </div>
                            <div class="min-w-0 relative flex-auto">
                                <div class="flex flex-row">
                                    <div class="items-start flex-auto">
                                        <span class="text-slate-700 dark:text-slate-300 md:text-lg font-mono"> {{ project.description.technology }}</span>
                                    </div>


                                </div>
                                <dl class="md:mt-1 md:flex md:flex-wrap text-sm leading-6 font-medium">

                                    <div class="w-full mt-2 font-normal md:text-lg">
                                        <p class="text-left md:mx-4">{{ project.description.description }}</p>

                                    </div>

                                </dl>
                            </div>

                        </div>

                    </figure>
                </li>
                {% endfor %}
            </ul>

        </div>
    </div>
</div>
<br>
