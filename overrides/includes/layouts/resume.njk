---
layout: layouts/base.njk
---

{{ content | safe }}


<div class="md:flex items-start flex-grow mt-4">
    <div class="md:flex-auto md:w-2/3 md:mr-4">
        <h2 class="text-2xl md:text-4xl text-black dark:text-slate-200">Опыт</h2>
        <ul class="divide-y divide-slate-100">
            {% for job in jobs %}
            <article class="md:flex items-start space-x-6 mt-2">
                <div class="min-w-0 relative flex-auto">
                    <h2 class="font-semibold pr-20 text-xl text-black font-medium mt-2 dark:text-slate-300">
                        {{ job.name }}
                    </h2>

                    <dl class="mt-1 md:flex md:flex-wrap text-sm leading-6 font-medium">
                        <div class="md:absolute top-0 right-0 flex items-center space-x-2">

                            <dd class="md:text-lg  text-sky-500 dark:text-sky-400">{{ job.work_type }}
                            </dd>
                        </div>
                        <div>
                            <dt class="sr-only">Rating</dt>
                            <dd class="rounded md:text-lg text-gray-700 dark:text-gray-50">{{ job.post }}</dd>
                        </div>
                        <div class="md:absolute right-0 flex items-center space-x-2 text-right md:text-lg">

                            <dd>{{ job.work_period }}
                            </dd>
                        </div>
                        {% for description in job.descriptions %}
                        <div class="w-full mt-2 font-normal md:text-lg">
                            <p class="text-left mx-4">{{ description.description }}</p>
                            <span class="text-slate-700 dark:text-slate-300">Технолгии: {{ description.technology }}</span>
                        </div>
                        {% endfor %}
                    </dl>
                </div>
            </article>
            {% endfor %}
            {% for e in edu %}
            <article class="flex items-start space-x-6 mt-4">
                <div class="min-w-0 relative flex-auto">
                    <h2 class="font-semibold pr-20 text-xl text-black font-medium mt-2 dark:text-slate-300">
                        {{ e.name }}
                    </h2>

                    <dl class="mt-1 md:flex md:flex-wrap text-sm leading-6 font-medium">
                         <div class="md:absolute top-0 right-0 flex items-center space-x-2">

                            <dd class="md:text-lg text-sky-500 dark:text-sky-400">{{ e.work_type }}
                            </dd>
                        </div>
                        <div>
                            <dt class="sr-only">Rating</dt>
                            <dd class="rounded md:text-lg text-gray-700 dark:text-gray-50">{{ e.post }}</dd>
                        </div>
                        <div class="md:absolute right-0 flex items-center space-x-2 text-right md:text-lg">

                            <dd>{{ e.work_period }}
                            </dd>
                        </div>
                        {% for description in e.descriptions %}
                        <div class="flex-none w-full mt-2 font-normal md:text-lg">
                            <p class="text-left mx-4">{{ description.description }}</p>
                            <span class="text-slate-700 dark:text-slate-300">{{ description.result }}</span>
                        </div>
                        {% endfor %}
                    </dl>
                </div>
            </article>
            {% endfor %}
        </ul>
    </div>
    <div class="md:flex-auto md:w-1/3 flex-wrap md:ml-4">
        <h2 class="text-2xl md:text-4xl mb-4 text-black dark:text-slate-200">Навыки</h2>

        {% for skill in skills %}
        <div class="my-4">
            <span class="block text-xl text-black font-medium mb-4 dark:text-slate-300">{{ skill.name }}</span>
            {% for item in skill.data %}
            <span class="inline-flex border rounded-md py-2 px-4 mr-2 mb-2 text-sm">{{ item }}</span>
            {% endfor %}
        </div>
        {% endfor %}
    </div>
</div>
