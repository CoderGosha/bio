---
layout: layouts/base.njk
---

{{ content | safe }}

<div class="flex items-start flex-grow">


    <div class="flex-auto w-2/3">
        <h2 class="text-4xl mb-8 text-black dark:text-slate-200">Опыт</h2>
        {% for job in jobs %}
        <div class="mb-8 ml-4">

            <h3 class="text-2xl font-medium text-black dark:text-slate-300">{{ job.name }}</h3>
            <div class="flex flex-col">
                <span>{{ job.work_period }}</span>
                <span>{{ job.site }}</span>
                <span>{{ job.post }}</span>
                <span>{{ job.work_type }}</span>
            </div>
            {% for description in job.descriptions %}
            <div class="my-2">
                <p class="text-left mx-4">{{ description.description }}</p>
                <span class="text-slate-700 dark:text-slate-300">Технолгии: {{ description.technology }}</span>
            </div>
            {% endfor %}
        </div>
        {% endfor %}
    </div>
    <div class="flex-auto w-1/3">
        <h2 class="text-4xl mb-8 text-black dark:text-slate-200">Навыки</h2>

        {% for skill in skills %}
        <div class="my-4">
            <span class="block text-xl text-black font-medium mb-4 dark:text-slate-300">{{ skill.name }}</span>
            {% for item in skill.data %}
            <span class="inline-flex border rounded-md py-2 px-4 mr-2 mb-2 text-sm">{{ item }}</span>
            {% endfor %}
        </div>
        {% endfor %}
    </div>
</div>
